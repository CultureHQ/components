{
  "name": "@culturehq/components",
  "version": "2.1.1",
  "description": "CultureHQ's component library",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn build:css && yarn build:js && yarn build:docs",
    "build:js": "babel src --out-dir ./dist && sed -i '' -e \"s/styles\\/app.scss/main.css/\" dist/index.js && cp src/icons.json dist/icons.json",
    "build:css": "node-sass src/styles/app.scss > dist/main.css",
    "build:docs": "webpack --mode production",
    "clean": "git ls-files -o | grep -v node_modules | xargs rm",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint .",
    "lint:css": "sass-lint -c .sass-lint.yml -v --max-warnings 0",
    "prettier": "prettier --write '**/*.js'",
    "start": "webpack-dev-server --mode development --hot",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CultureHQ/components.git"
  },
  "author": "Kevin Deisz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CultureHQ/components/issues"
  },
  "homepage": "https://github.com/CultureHQ/components#readme",
  "peerDependencies": {
    "react": "^16",
    "react-dom": "^16"
  },
  "dependencies": {
    "classnames": "^2.2.6"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-dynamic-import-node": "^2.0.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.5.0",
    "node-sass": "^4.9.3",
    "packfiles": "^0.0.2",
    "prettier": "^1.14.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.22.1",
    "webpack": "^4.17.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.scss$": "identity-obj-proxy"
    },
    "setupTestFrameworkScriptFile": "./test/setup-tests.js",
    "testURL": "http://localhost"
  }
}
