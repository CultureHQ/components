{
  "name": "@culturehq/components",
  "version": "7.0.0",
  "description": "CultureHQ's component library",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn build:css && yarn build:js && yarn build:docs",
    "build:js": "babel src --out-dir ./dist --ignore '**/__tests__' --ignore '**/__docs__' && sed -i '' -e \"s/styles\\/app.scss/main.css/\" dist/index.js && cp src/*.json dist",
    "build:css": "node-sass src/styles/app.scss > dist/main.css",
    "build:docs": "webpack --mode production",
    "clean": "git ls-files -o | grep -v node_modules | xargs rm",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint .",
    "lint:css": "sass-lint -c .sass-lint.yml -v --max-warnings 0",
    "prettier": "prettier --write '**/*.js'",
    "start": "webpack-dev-server --mode development --hot",
    "test": "TZ=UTC jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CultureHQ/components.git"
  },
  "author": "Kevin Deisz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CultureHQ/components/issues"
  },
  "homepage": "https://github.com/CultureHQ/components#readme",
  "peerDependencies": {
    "cropperjs": "^1",
    "react": "^16",
    "react-dom": "^16",
    "react-modal": "^3"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@mapbox/jsxtreme-markdown-loader": "^0.8.3",
    "@reach/router": "^1.2.1",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "cropperjs": "^1.4.3",
    "css-loader": "^1.0.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "jest-axe": "^3.1.0",
    "node-sass": "^4.10.0",
    "prettier": "^1.15.2",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "react-modal": "^3.6.1",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.9"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.scss$": "identity-obj-proxy"
    },
    "setupTestFrameworkScriptFile": "./setup-tests.js",
    "testRegex": ".test.js",
    "testURL": "http://localhost"
  }
}
